{% extends 'baseAdmin.html.twig' %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Liste des Fournisseurs</h2>
        <a href="{{ path('supplier_new') }}" class="btn add-btn">Ajouter un fournisseur</a>
    </div>

    <!-- Conteneur pour limiter la largeur -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-header">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Adresse</th>
                        <th>Code Fiscal</th>
                        <th>Type de Recyclage</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for supplier in suppliers %}
                        <tr>
                            <td>{{ supplier.id }}</td>
                            <td>{{ supplier.name }}</td>
                            <td>{{ supplier.email }}</td>
                            <td>{{ supplier.phone }}</td>
                            <td>{{ supplier.address }}</td>
                            <td>{{ supplier.taxcode }}</td>
                            <td>{{ supplier.typeRecyclage }}</td>
                            <td>
                                <div class="actions-container">
                                    <a href="{{ path('supplier_edit', {id: supplier.id}) }}" class="btn btn-primary btn-sm" aria-label="Modifier le fournisseur {{ supplier.name }}">Modifier</a>
                                    <a href="{{ path('supplier_delete', {id: supplier.id}) }}" class="btn btn-danger btn-sm" 
                                       style="background-color: #db966b; border-color: #db966b; color: white;" 
                                       data-confirm="Êtes-vous sûr de vouloir supprimer ce fournisseur ?" 
                                       aria-label="Supprimer le fournisseur {{ supplier.name }}">
                                       Supprimer
                                    </a>
                                </div>
                                
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center">Aucun fournisseur trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/liste_fournisseurs.css') }}">
{% endblock %}

{% endblock %}
