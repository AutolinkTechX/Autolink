{% extends 'baseAdmin.html.twig' %}
{% block title %}Edit Product{% endblock %}
{% block page_title %}Edit Product{% endblock %}
{% block content %}
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Edit Product</h6>
            <a href="{{ path('list_articles_admin') }}" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="card-body" enctype="multipart/form-data">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prix) }}
                    {{ form_widget(form.prix) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image) }}
                    {% if article.image %}
                        <img src="{{ asset('uploads/' ~ article.image) }}" alt="Product Image" width="100">
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(form.quantitestock) }}
                    {{ form_widget(form.quantitestock) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}