<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
         <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css">
        <!-- Lien CDN pour FontAwesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
        {% block stylesheets %}
        <style>
            body {
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
            }

            .container-payment {
                display: flex;
                flex-direction: row;
                gap: 30px;
                padding: 20px;
                max-width: 900px;
            }

            .card {
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 100%;
            }

            .card-body {
                padding: 40px;
            }

            .table {
                margin-bottom: 0;
            }

            hr {
                border: 1px solid #ddd;
            }

            .right-panel {
                background: white;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center;
                flex-grow: 0.5;
                width: 400px;
                min-height: 300px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                gap: 15px;
            }

            .btn-payment {
                background: #db966b;
                color: white;
                padding: 10px;
                border-radius: 5px;
                font-size: 16px;
                width: 100%;
                border: none;
                transition: background 0.3s ease;
            }

            .btn-payment:hover {
                background: #cf9774;
            }

            .btn-confirm {
                background-color: #cf9774;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                font-size: 16px;
                transition: background-color 0.3s ease;
            }

            .btn-confirm:hover {
                background-color: #b67a5e;
            }   
        </style>
        {% endblock %}
        {% block javascripts %}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const cancelButton = document.getElementById('cancelBtn');
                
                cancelButton.addEventListener('click', function() {
                    if (confirm("Voulez-vous vraiment annuler le paiement et revenir Ã  la page de boutique ?")) {
                        const modal = document.querySelector('.modal.show');
                        if (modal) {
                            const modalInstance = bootstrap.Modal.getInstance(modal);
                            modalInstance.hide();
                        }
                        window.location.href = 'http://127.0.0.1:8000/commande';
                    }
                });
            });

            function downloadInvoice() {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                const invoiceContent = document.querySelector('.card-body').innerHTML;

                doc.html(invoiceContent, {
                    callback: function (doc) {
                        doc.save('facture.pdf');
                    },
                    x: 10,
                    y: 10
                });
            }
        </script>
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <div class="container-payment">
            <!-- Facture -->
            <div class="col-md-6">
                <div class="card shadow mt-4">
                    <div class="card-body">
                        <h4 class="text-center">ðŸ§¾ Facture</h4>
                        <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix Unitaire</th>
                            <th>QuantitÃ©</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for panier in paniers %}
                            <tr>
                                <td>{{ panier.article.nom }}</td>
                                <td>${{ panier.prixUnitaire|number_format(2, '.', ',') }}</td>
                                <td>{{ panier.quantite }}</td>
                                <td>${{ (panier.prixUnitaire * panier.quantite)|number_format(2, '.', ',') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <hr>
                <div><strong>Total HT:</strong> ${{ totalHT|number_format(2, '.', ',') }}</div>
                <hr>
                <div><strong>TVA (20%):</strong> ${{ tva|number_format(2, '.', ',') }}</div>
                <hr>
                <div><strong>Total TTC:</strong> <span class="total-ttc">${{ totalTTC|number_format(2, '.', ',') }}</span></div>
                <hr>
            </div>
                        
                    </div>
                </div>
            </div>

            <!-- Panneau Droit (SÃ©lection Paiement) -->
            <div class="right-panel">
                <h4>SÃ©lectionnez un moyen de paiement :</h4>
                <button class="btn btn-payment" data-bs-toggle="modal" data-bs-target="#cardModal">ðŸ’³ Carte Bancaire</button>
                <button class="btn btn-payment" data-bs-toggle="modal" data-bs-target="#cashModal">ðŸ’¶ EspÃ¨ces</button>
                <button class="btn btn-payment" id="cancelBtn">Annuler</button>
            </div>
        </div>

        <!-- Modal Carte Bancaire -->
        <div class="modal fade" id="cardModal" tabindex="-1" aria-labelledby="cardModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cardModalLabel">Paiement par Carte Bancaire</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="" method="POST">
                            <div class="mb-3">
                                <label class="form-label">NumÃ©ro de Carte</label>
                                <input type="text" class="form-control" placeholder="1234 5678 9012 3456" name="card_number">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Date d'expiration</label>
                                    <input type="text" class="form-control" placeholder="MM/AA" name="expiry_date">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">CVV</label>
                                    <input type="text" class="form-control" placeholder="123" name="cvv">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Titulaire de la Carte</label>
                                <input type="text" class="form-control" placeholder="Nom PrÃ©nom" name="card_holder">
                            </div>
                            <button type="submit" class="btn-confirm w-100">Confirmer le Paiement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal EspÃ¨ces -->
        <div class="modal fade" id="cashModal" tabindex="-1" aria-labelledby="cashModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cashModalLabel">Paiement en EspÃ¨ces</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Nom Complet</label>
                                <input type="text" class="form-control" placeholder="Nom PrÃ©nom" name="full_name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">TÃ©lÃ©phone</label>
                                <input type="text" class="form-control" placeholder="06 XX XX XX XX" name="phone_number">
                            </div>
                            <button type="submit" class="btn-confirm w-100">Confirmer le Paiement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    
    <!-- Scripts nÃ©cessaires pour Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    </body>
</html>
