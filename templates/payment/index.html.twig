<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paiement</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {% block stylesheets %}
        <style>
            body {
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
            }

            .container-payment {
                display: flex;
                flex-direction: row;
                gap: 30px;
                padding: 20px;
                max-width: 900px;
            }

            .card {
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 100%;
            }

            .right-panel {
                background: white;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center;
                width: 400px;
                min-height: 300px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                gap: 15px;
            }

            .btn-payment {
                background: #db966b;
                color: white;
                padding: 10px;
                border-radius: 5px;
                font-size: 16px;
                width: 100%;
                border: none;
                transition: background 0.3s ease;
            }

            .btn-payment:hover {
                background: #cf9774;
            }

            .btn-close {
                background: none;
                border: none;
                font-size: 20px;
            }

        </style>
    {% endblock %}
</head>
<body>

<div class="container-payment">
    <!-- Facture -->
    <div class="col-md-6">
        <div class="card shadow mt-4">
            <div class="card-body">
                <h4 class="text-center">üßæ Facture</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix Unitaire</th>
                            <th>Quantit√©</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for panier in paniers %}
                            <tr>
                                <td>{{ panier.article.nom }}</td>
                                <td>${{ panier.prixUnitaire|number_format(2, '.', ',') }}</td>
                                <td>{{ panier.quantite }}</td>
                                <td>${{ (panier.prixUnitaire * panier.quantite)|number_format(2, '.', ',') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <hr>
                <div><strong>Total HT:</strong> ${{ totalHT|number_format(2, '.', ',') }}</div>
                <div><strong>TVA (20%):</strong> ${{ tva|number_format(2, '.', ',') }}</div>
                <div><strong>Total TTC:</strong> ${{ totalTTC|number_format(2, '.', ',') }}</div>
            </div>
        </div>
    </div>

    <!-- S√©lection du paiement -->
    <div class="right-panel">
        <h4>S√©lectionnez un moyen de paiement :</h4>
        <a href="{{ path('app_payment', {'showCardModal': 1}) }}" class="btn btn-payment">üí≥ Carte Bancaire</a>
        <a href="{{ path('app_payment', {'showCashModal': 1}) }}" class="btn btn-payment">üí∂ Esp√®ces</a>
        <a href="{{ path('app_listarticle') }}" class="btn btn-payment">Annuler</a>
    </div>
</div>

<!-- Modal Carte Bancaire -->
{% if showCardModal %}
<div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paiement par Carte Bancaire</h5>
                <a href="{{ path('app_payment') }}" class="btn-close">‚úñ</a>
            </div>
            <div class="modal-body">
                <form action="{{ path('app_payment') }}" method="POST">
                    <input type="hidden" name="payment_method" value="card">
                    <div class="mb-3">
                        <label class="form-label">Num√©ro de Carte</label>
                        <input type="text" class="form-control" placeholder="xxxx xxxx xxxx xxxx" name="card_number" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Date d'expiration</label>
                            <input type="text" class="form-control" placeholder="MM/AA" name="expiry_date" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CVV</label>
                            <input type="text" class="form-control" placeholder="xxx" name="cvv" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Titulaire de la Carte</label>
                        <input type="text" class="form-control" placeholder="Nom Pr√©nom" name="card_holder" required>
                    </div>
                    <button type="submit" class="btn btn-payment">Confirmer le Paiement</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

<!-- Modal Esp√®ces -->
{% if showCashModal %}
<div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Paiement en Esp√®ces</h5>
                <a href="{{ path('app_payment') }}" class="btn-close">‚úñ</a>
            </div>
            <div class="modal-body">
                <form method="POST" action="{{ path('app_payment') }}">
                    <input type="hidden" name="payment_method" value="especes">
                    <div class="row">
                        <div class="col mb-6">
                            <label class="form-label">Nom</label>
                            <input type="text" class="form-control" placeholder="Nom" name="name" required>
                        </div>
                        <div class="col mb-6">
                            <label class="form-label">Pr√©nom</label>
                            <input type="text" class="form-control" placeholder="Pr√©nom" name="last_name" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Num√©ro de T√©l√©phone</label>
                        <input type="text" class="form-control" placeholder="Votre num√©ro" name="phone" required>
                    </div>
                    <button type="submit" class="btn btn-payment">Confirmer le Paiement</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% for message in app.flashes('error') %}
    <div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Erreur</h5>
                    <a href="{{ path('app_payment') }}" class="btn-close">‚úñ</a>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('success') %}
    <div class="modal show d-block" style="background: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Succ√®s</h5>
                    <a href="{{ path('app_listarticle') }}" class="btn-close">‚úñ</a>
                </div>
                <div class="modal-body">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>