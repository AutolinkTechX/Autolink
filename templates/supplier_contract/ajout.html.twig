{% extends 'baseAdmin.html.twig' %}

{% block title %}Supplier Contract{% endblock %}

{% block page_title %}Supplier Contract{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center vh-50">
    <div class="form-container rounded p-5 shadow" style="width:600px;">
        <div class="bg-light rounded p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

            <!-- Start Date -->
            <div class="mb-3">
                <label class="form-label small text-muted mb-1">Start Date</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-calendar-plus text-secondary"></i>
                    </span>
                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control border-start-0 datepicker'}}) }}
                </div>
            </div>

            <!-- End Date -->
            <div class="mb-3">
                <label class="form-label small text-muted mb-1">End Date</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-calendar-minus text-secondary"></i>
                    </span>
                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control border-start-0 datepicker'}}) }}
                </div>
            </div>

            <!-- status-->
            <div class="mb-3">
                <label class="form-label small text-muted mb-1">Contract Terms</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-file-signature text-secondary"></i>
                    </span>
                    {{ form_widget(form.status, {
                        'attr': {
                            'class': 'form-control border-start-0',
                            'placeholder': 'Enter detailed contract terms...',
                            'rows': 4
                        }
                    }) }}
                </div>
            </div>

            <!-- Document Upload -->
<div class="mb-3">
    <label class="form-label small text-muted mb-1">Contract Document (PDF)</label>
    <div class="input-group">
        <span class="input-group-text bg-white border-end-0">
            <i class="fas fa-cloud-upload-alt text-secondary"></i>
        </span>
        {{ form_widget(form.documentUrl, {
            'attr': {
                'class': 'form-control border-start-0',
                'placeholder': 'Select PDF document to upload'
            }
        }) }}
    </div>
</div>


            <!-- Terms -->
            <div class="mb-3">
                <label class="form-label small text-muted mb-1">Contract Status</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-toggle-on text-secondary"></i>
                    </span>
                    {{ form_widget(form.terms, {
                        'attr': {
                            'class': 'form-select border-start-0',
                            'placeholder': 'Select contract status'
                        }
                    }) }}
                </div>
            </div>

            <!-- Supplier -->
            <div class="mb-3">
                <label class="form-label small text-muted mb-1">Associated Supplier</label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fas fa-handshake text-secondary"></i>
                    </span>
                    {{ form_widget(form.supplier, {
                        'attr': {
                            'class': 'form-select border-start-0',
                            'placeholder': 'Select supplier'
                        }
                    }) }}
                </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-dark w-100 py-2" style="background-color: #b5602c;">
                    <i class="fas fa-save me-2"></i>Save Contract
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}