{% extends 'baseAdmin.html.twig' %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Liste des Contrats des Fournisseurs</h2>
        <a href="{{ path('contract_new') }}" class="btn add-btn">Ajouter un contrat</a>
    </div>

    <!-- Conteneur pour limiter la largeur -->
    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-header">
                    <tr>
                        <th>ID</th>
                        <th>Fournisseur</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Termes</th>
                        <th>Document</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contract in contracts %}
                        <tr>
                            <td>{{ contract.id }}</td>
                            <td>{{ contract.supplier.name }}</td>
                            <td>{{ contract.startDate|date('d/m/Y') }}</td>
                            <td>{{ contract.endDate|date('d/m/Y') }}</td>
                            <td>{{ contract.terms }}</td>
                            <td>
                                {% if contract.documenturl %}
                                    <a href="{{ asset(contract.documenturl) }}" target="_blank" class="btn btn-info btn-sm">Voir</a>
                                {% else %}
                                    Aucun document
                                {% endif %}
                            </td>
                            <td>
                                <div class="actions-container">
                                    <a href="{{ path('contract_edit', {id: contract.id}) }}" class="btn btn-primary btn-sm" aria-label="Modifier le contrat">
                                        Modifier
                                    </a>
                                    <a href="{{ path('contract_delete', {id: contract.id}) }}" class="btn btn-danger btn-sm"
                                       style="background-color: #db966b; border-color: #db966b; color: white;"
                                       data-confirm="Êtes-vous sûr de vouloir supprimer ce contrat ?"
                                       aria-label="Supprimer le contrat">
                                       Supprimer
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun contrat trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/liste_contrats.css') }}">
{% endblock %}

{% endblock %}
