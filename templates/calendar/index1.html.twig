{% extends 'baseEntreprise.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block content %}
    <h1>Calendrier des Accords</h1>
    <div id="calendar"></div>

    <!-- FullCalendar CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth', // Vue par d√©faut : Mois
                locale: 'fr', // Langue fran√ßaise
                events: '/calendar/events', // üî• Charger les √©v√©nements depuis le contr√¥leur
                eventTimeFormat: { // Format des dates
                    hour: '2-digit',
                    minute: '2-digit',
                    meridiem: false
                }
            });
            calendar.render();
        });
    </script>
{% endblock %}
