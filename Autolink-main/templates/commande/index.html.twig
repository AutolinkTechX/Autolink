            </div>
        </div>
        <div class="col-lg-6">
            <div class="shoping__checkout">
                <h5>Cart Total</h5>
                <ul>
                    <li>Total HT: <span>$10000</span></li>
                    <li>TVA (20%): <span>$20</span></li>
                    <li>Total TTC: <span>$12000</span></li>
                </ul>
                <a href="{{ path('app_payement') }}" class="primary-btn">Procedure de payement</a>
            </div>
        </div>
    </div>

    <!-- Popup Modal -->
    <div id="invoicePopup" class="popup">
        <span class="close" onclick="closeInvoicePopup()">&times;</span>
        <div class="container-payment">
            <div class="card shadow mt-4">
                <div class="card-body">
                    <h4 class="text-center">üßæ Facture</h4>
                    <hr>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th>Prix Unitaire</th>
