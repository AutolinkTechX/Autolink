                                            <h5>${{ panier.getPrixUnitaire}}</h5>
                                            <h5>{{ panier.getQuantite}}</h5>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="row">
        <div class="col-lg-12">
            <div class="shoping__cart__btns">
                <a href="{{ path('app_listarticle') }}" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
