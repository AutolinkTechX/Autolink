{% extends 'base.html.twig' %}
{% block title %}Liste des Favoris{% endblock %}
{% block body %}
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Department</h4>
                            <ul>
                                <li><a href="#">Echappement</a></li>
                                <li><a href="#">Electronique</a></li>
                                <li><a href="#">Freinage</a></li>
                                <li><a href="#">Pi√®ces de carrosserie</a></li>
                                <li><a href="#">Roues et pneumatique</a></li>
                            </ul>
                        </div>
                        <div class="sidebar__item">
                            <h4>Price</h4>
                            <div class="price-range-wrap">
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content" data-min="10" data-max="540">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <div class="range-slider">
                                    <div class="price-input">
                                        <input type="text" id="minamount" placeholder="Min">
                                        <input type="text" id="maxamount" placeholder="Max">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Vos Favoris</h2>
                        </div>
                        <div class="row">
                           {% for favorie in favories %}
                                <div class="col-lg-4 col-md-6 col-sm-6">
                                    <div class="product__item">
                                        <div class="product__item__pic set-bg" style="">
                                            <ul class="product__item__pic__hover">
                                                <li><a href="./shop-details.html"><i class="fa fa-retweet"></i></a></li>
                                                <li><a href="./favorie.html"><i class="fa fa-heart"></i></a></li>
                                                <li><a href="./shoping-cart.html"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__item__text">
                                            <h5>{{ favorie.getArticle.getId}}</h5>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        function openInvoicePopup() {
            document.getElementById("invoicePopup").style.display = "block";
        }

        function closeInvoicePopup() {
            document.getElementById("invoicePopup").style.display = "none";
        }

        function downloadInvoice() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();

            doc.setFontSize(18);
            doc.text("üßæ Facture", 80, 10);

            doc.setFontSize(12);
            doc.text("Entreprise: XYZ Company", 10, 30);
            doc.text("Client: John Doe", 10, 40);
            doc.text("Date: " + new Date().toLocaleDateString(), 10, 50);

            // Table Header
            doc.text("Produit", 10, 70);
            doc.text("Prix Unitaire", 60, 70);
            doc.text("Quantit√©", 110, 70);
            doc.text("Total", 160, 70);

            // Table Rows
            doc.text("Logo Design", 10, 80);
            doc.text("$100.00", 60, 80);
            doc.text("1", 110, 80);
            doc.text("$100.00", 160, 80);

            // Summary
            doc.text("Total HT: $100.00", 10, 100);
            doc.text("TVA (20%): $20.00", 10, 110);
            doc.text("Total TTC: $120.00", 10, 120);

            // Download the PDF
            doc.save("facture.pdf");
        }
    </script>
{% endblock %}
